<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Just Task It - Analytics Dashboard</title>
    <link rel="stylesheet" href="/styles/dashboard.css" />
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
  </head>
  <body>
    <div class="container">
      <h1>Just Task It - Analytics Dashboard</h1>

      <div class="stats-grid">
        <div class="stat-card created">
          <h2>Tasks Created</h2>
          <div class="number"><%= taskCounts.created %></div>
        </div>

        <div class="stat-card updated">
          <h2>Tasks Updated</h2>
          <div class="number"><%= taskCounts.updated %></div>
        </div>

        <div class="stat-card deleted">
          <h2>Tasks Deleted</h2>
          <div class="number"><%= taskCounts.deleted %></div>
        </div>
      </div>

      <div class="chart-container">
        <h2>Tasks Completed Per Day</h2>
        <canvas id="completedChart"></canvas>
      </div>
    </div>
    <script>
      const completedData = <%- JSON.stringify(completedOverTime) %>;

      completedData.sort((a, b) => new Date(a._id) - new Date(b._id))

      const labels = completedData.map(item => item._id)
      const data = completedData.map(item => item.count)

      const ctx = document.getElementById('completedChart').getContext('2d')
      new Chart(ctx, {
        type: 'line',
        data: {
          labels: labels,
          datasets: [{
            label: 'Tasks Completed per Day',
            data: data,
            borderColor: '#4f46e5',
            backgroundColor: 'rgba(99, 102, 241, 0.2)',
            borderWidth: 2,
            fill: true,
            tension: 0.3
          }]
        },
        options: {
          scales: {
            x: {
              title: {
                display: true,
                text: 'Date'
              }
            },
            y: {
              beginAtZero: true,
              title: {
                display: true,
                text: 'Number of Completed Tasks'
              },
              ticks: {
                precision: 0
              }
            }
          },
          plugins: {
            legend: {
              display: false
            }
          }
        }
      })
    </script>
  </body>
</html>
